<Window x:Class="AdvanceHomework.Manager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdvanceHomework"
        mc:Ignorable="d"
        Title="Manager" Height="450" Width="800">
    <Grid>
        <Button x:Name="Refresh" Content="Refresh" HorizontalAlignment="Left" Margin="10,370,0,0" VerticalAlignment="Top" Height="34" Width="75" Click="Refresh_Click"/>
        <Button x:Name="creatingAccount" Content="Create New User" HorizontalAlignment="Left" Margin="687,370,0,0" VerticalAlignment="Top" Height="34" Width="103" Click="CreateNewUser"/>
        <DataGrid x:Name="managerGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,0,217"/>
        <Button x:Name="logOutManager" Content="LogOut" HorizontalAlignment="Left" Margin="323,370,0,0" VerticalAlignment="Top" Height="34" Width="118" Click="logOutManager_Click"/>

    </Grid>
</Window>
